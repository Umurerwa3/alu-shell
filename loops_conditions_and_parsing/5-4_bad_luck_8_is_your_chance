#!/usr/bin/env bash
#This scripts diplays "bad luck" on 4th iteration, "good luck" on 8th iteretion and "Best School" for other iterations

i=1

while [ "$i" -lt 10 ]; do

   if [ $i -eq 4 ]; then

       echo "bad luck"

   elif [ $i -eq 8 ]; then

       echo "good luck"

   else 

       echo "Best School"
 
   fi

i=$((i + 1))

done
